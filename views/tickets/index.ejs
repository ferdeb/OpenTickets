<!DOCTYPE html>
<html>
<head>
  <title>Visualizar Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Visualizar Tickets</h1>
  <a href="/tickets/crear" class="btn btn-success mb-3">Registrar Nuevo Articulo</a>
  <a href="/" class="btn btn-primary mb-3">Regresar al menu</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID del Articulo</th>
        <th>Tecnico Asignado</th>
        <th>Fecha</th>
        <th>Estado del Ticket</th>
        <th>Prioridad</th>
        <th>Descripcion</th>
        <th>Diagnostico</th>
        <th>Acciones Administrativas</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(a => { %>
        <tr>
          <td><%= a.articulo?.articulo_id %></td>
          <td><%= a.tecnico?.nombre %> </td>
          <td><%= a.fecha || 'N/A' %></td>
          <td><%= a.estado_ticket?.nombre %> </td>
          <td><%= a.prioridad?.nombre %> </td>
          <td><%= a.descripcion %></td>
          <td><%= a.diagnostico %></td> 
          <!-- Aqui se emplean los alias -->
          <td>
            <a href="/tickets/editar/<%= a.ticket_id %>" class="btn btn-warning btn-sm">Editar Ticket</a>
            <a href="/tickets/eliminar/<%= a.ticket_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Â¿Eliminar ticket?')">Eliminar Ticket</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>