<!DOCTYPE html>
<html>
<head>
  <title>Crear Nuevo Ticket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Crear Nuevo Ticket</h1>
  <form method="post" action="/tickets/crear">
   
    <select name="articulo_id" class="form-control mb-3" required>
      <% articulo.forEach(u => { %>
        <option value="<%= u.articulo_id %>"> <%= u.serie %></option>
        <% }) %>
    </select>

    <select name="tecnico_id" class="form-control mb-3" required>
      <% tecnico.forEach(u => { %>
        <option value="<%= u.tecnico_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>

    <input type="date" name="fecha" class="form-control mb-2">


    <select name="estado_ticket_id" class="form-control mb-3" required>
      <% estado_ticket.forEach(u => { %>
        <option value="<%= u.estado_ticket_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>

    <textarea name="descripcion" placeholder="DescripciÃ³n" class="form-control mb-2"></textarea>
    <textarea name="diagnostico" placeholder="Diagnostico" class="form-control mb-2"></textarea>
    
    <button class="btn btn-success">Guardar Ticket</button>
  </form>
</body>
</html>