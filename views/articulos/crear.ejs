<!DOCTYPE html>
<html>
<head>
  <title>Crear Nuevo Articulo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Crear Nuevo Articulo</h1>
  <form method="post" action="/articulos/crear">
    <select name="cliente_id" class="form-control mb-3" required>
      <% clientes.forEach(u => { %>
        <option value="<%= u.cliente_id %>"><%= u.nombre %> <%= u.apellido %></option>
      <% }) %>
    </select>

    <select name="modelo_id" class="form-control mb-3" required>
      <% modelos.forEach(u => { %>
        <option value="<%= u.modelo_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>

    <input type="text" name="serie" placeholder="Serie" class="form-control mb-2" required>
    <textarea name="descripcion" placeholder="DescripciÃ³n" class="form-control mb-2"></textarea>
    <input type="date" name="fecha_ingreso" class="form-control mb-2">

    <select name="estado_articulo_id" class="form-control mb-3" required>
      <% estado_articulos.forEach(u => { %>
        <option value="<%= u.estado_articulo_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>
    <button class="btn btn-success">Guardar Articulo</button>
  </form>
</body>
</html>