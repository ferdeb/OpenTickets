<!DOCTYPE html>
<html>
<head>
  <title>Articulos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Visualizar Articulos</h1>
  <a href="/" class="btn btn-primary mb-3">Regresar al menu</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Serie</th>
        <th>Descripción</th>
        <th>Fecha Ingreso</th>
        <th>Modelo</th>
        <th>Articulo activo?</th>
        <th>Acciones Administrativas</th>
      </tr>
    </thead>
    <tbody>
      <% articulos.forEach(a => { %>
        <tr>
          <td><%= a.cliente?.nombre %> <%= a.cliente?.apellido %></td>
          <td><%= a.serie %></td>
          <td><%= a.descripcion %></td>
          <td><%= a.fecha_ingreso || 'N/A' %></td>
          <td><%= a.modelo?.nombre %></td>
          <td><%= a.estado_articulo?.nombre %></td> 
          <!-- Aqui se emplean los alias -->
          <td>
            <a href="/articulos/editar/<%= a.articulo_id %>" class="btn btn-warning btn-sm">Editar</a>
            <a href="/articulos/eliminar/<%= a.articulo_id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar articulo?')">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>