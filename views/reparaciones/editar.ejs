<!DOCTYPE html>
<html>
<head>
  <title>Editar Reparaciones</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Editar Reparaciones</h1>
  <form method="post" action="/reparaciones/editar/<%= reparaciones.reparacion_id %>">

    <select name="ticket_id" class="form-control mb-3" required>
      <% tickets.forEach(u => { %>
        <option value="<%= u.ticket_id %>"><%= u.ticket_id %></option>
      <% }) %>
    </select>

    <% let fecha = reparaciones.fecha ? new Date(reparaciones.fecha).toISOString().slice(0, 10) : ''; %>
    <input type="date" name="fecha" value="<%= fecha %>" class="form-control mb-2">
    
    <textarea name="descripcion" class="form-control mb-2"><%= reparaciones.descripcion %></textarea>

    <input type="text" name="costo" value="<%= reparaciones.costo %>" class="form-control mb-2" required>
    
    <button class="btn btn-warning">Actualizar Reparacion</button>
  </form>
</body>
</html>