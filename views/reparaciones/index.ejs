<!DOCTYPE html>
<html>
<head>
  <title>Visualizar Reparaciones</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Visualizar Reparaciones</h1>
  <a href="/" class="btn btn-primary mb-3">Regresar al menu</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Descripción</th>
        <th>Costo</th>
        <th>Acciones Administrativas</th>
      </tr>
    </thead>
    <tbody>
      <% reparaciones.forEach(a => { %>
        <tr>
          <td><%= a.fecha || 'N/A' %></td>
          <td><%= a.descripcion %></td>
          <td><%= a.costo %></td> 
          <!-- Aqui se emplean los alias -->
          <td>
            <a href="/reparaciones/editar/<%= a.reparacion_id %>" class="btn btn-warning btn-sm">Editar Reparacion</a>
            <a href="/reparaciones/eliminar/<%= a.reparacion_id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar articulo?')">Eliminar Reparacion</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>