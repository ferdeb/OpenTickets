<!DOCTYPE html>
<html>
<head>
  <title>Crear Modelos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Registrar Nuevo Modelo</h1>
  <form method="post" action="/modelos/crear">
    <select name="marca_id" class="form-control mb-3" required>
      <% marcas.forEach(u => { %>
        <option value="<%= u.marca_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>
    <input type="text" name="nombre" placeholder="Nombre" class="form-control mb-2" required>
    <select name="activo" class="form-control mb-3">
      <option value="1">Activo</option>
      <option value="0">Inactivo</option>
    </select>
    <button class="btn btn-success">Guardar</button>
  </form>
</body>
</html>