<!DOCTYPE html>
<html>
<head>
  <title>Editar modelos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Editar modelos</h1>
  <form method="post" action="/modelos/editar/<%= modelos.modelo_id %>">

    <select name="marca_id" class="form-control mb-3" required>
      <% marcas.forEach(u => { %>
        <option value="<%= u.marca_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>
    
    <input type="text" name="nombre" value="<%= modelos.nombre %>" class="form-control mb-2">
    
    <select name="activo" class="form-control mb-3">
      <option value="1" <%= modelos.activo ? 'selected' : '' %>>Activo</option>
      <option value="0" <%= !modelos.activo ? 'selected' : '' %>>Inactivo</option>
    </select>
    <button class="btn btn-warning">Actualizar</button>
  </form>
</body>
</html>