<!DOCTYPE html>
<html>
<head>
  <title>Modelos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Modelos</h1>
  <a href="/modelos/crear" class="btn btn-success mb-3">Registrar Nuevo modelo</a>
  <a href="/" class="btn btn-primary mb-3">Regresar al menu</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre del Modelo</th>
        <th>Marca</th>
        <th>Activo?</th>
        
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% modelos.forEach(c => { %>
        <tr>
          <td><%= c.nombre %> </td>
          <td><%= c.marca?.nombre %></td>
          <td><%= c.activo ? 'Sí' : 'No' %> </td>
          <td>
            <a href="/modelos/editar/<%= c.modelo_id %>" class="btn btn-warning btn-sm">Editar</a>
            <a href="/modelos/eliminar/<%= c.modelo_id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar modelo?')">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <% if (typeof error !== 'undefined' && error === 'relacion') { %>
    <!-- Modal Bootstrap -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content border-danger">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title" id="errorModalLabel">Acción no permitida</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body">
            Este usuario no puede ser eliminado porque tiene tareas asignadas.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Entendido</button>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <% if (typeof error !== 'undefined' && error === 'relacion') { %>
    <script>
      const myModal = new bootstrap.Modal(document.getElementById('errorModal'));
      myModal.show();
    </script>
  <% } %>
</body>
</html>