<!DOCTYPE html>
<html>
<head>
  <title>Crear Nuevo Componente</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Crear Nuevo Componente</h1>
  <form method="post" action="/componentes/crear">
    <select name="modelo_id" class="form-control mb-3" required>
      <% modelos.forEach(u => { %>
        <option value="<%= u.modelo_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>

    <input type="text" name="nombre" placeholder="Nombre del componente" class="form-control mb-2" required>
    <input type="text" name="marca" placeholder="Marca del componente" class="form-control mb-2" required>
    <input type="text" name="precio_unitario" placeholder="Precio del componente" class="form-control mb-2" required>
    <input type="text" name="stock" placeholder="Stock del componente" class="form-control mb-2" required>

    <select name="activo" class="form-control mb-3">
      <option value="1" <%= componentes.activo ? 'selected' : '' %>>Activo</option>
      <option value="0" <%= !componentes.activo ? 'selected' : '' %>>Inactivo</option>
    </select>
    <button class="btn btn-success">Guardar Componente</button>
  </form>
</body>
</html>