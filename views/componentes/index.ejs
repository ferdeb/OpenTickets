<!DOCTYPE html>
<html>
<head>
  <title>Visualizar Componentes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Visualizar Componentes</h1>
  <a href="/" class="btn btn-primary mb-3">Regresar al menu</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Modelo compatible con el componente</th>
        <th>Nombre del componente</th>
        <th>Marca</th>
        <th>Precio Unitario</th>
        <th>Stock</th>
        <th>Articulo activo?</th>
        <th>Acciones Administrativas</th>
      </tr>
    </thead>
    <tbody>
      <% componentes.forEach(a => { %>
        <tr>
          <td> <% a.modelos.forEach(a => { %> <%= a.nombre %> <% }) %> </td>
          <td><%= a.nombre %></td>
          <td><%= a.marca %></td>
          <td><%= a.precio_unitario %></td>
          <td><%= a.stock %></td>
          <td><%= a.activo ? 'Sí' : 'No' %> </td>
          <!-- Aqui se emplean los alias -->
          <td>
            <a href="/componentes/editar/<%= a.componente_id %>" class="btn btn-warning btn-sm">Editar Componente</a>
            <a href="/componentes/eliminar/<%= a.componente_id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar componente?')">Eliminar Componente</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>