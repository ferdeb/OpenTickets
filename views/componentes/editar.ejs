<!DOCTYPE html>
<html>
<head>
  <title>Editar Componente Seleccionado</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Editar Componente Seleccionado</h1>
  <form method="post" action="/componentes/editar/<%= componentes.componente_id %>">
    <select name="modelo_id" class="form-control mb-3" required>
      <% modelos.forEach(u => { %>
        <option value="<%= u.modelo_id %>"><%= u.nombre %></option>
      <% }) %>
    </select>
 
    <input type="text" name="nombre" value="<%= componentes.nombre %>" class="form-control mb-2">
    <input type="text" name="marca" value="<%= componentes.marca %>" class="form-control mb-2">
    <input type="text" name="precio_unitario" value="<%= componentes.precio_unitario %>" class="form-control mb-2">
    <input type="text" name="stock" value="<%= componentes.stock %>" class="form-control mb-2">
   
    <select name="activo" class="form-control mb-3">
      <option value="1" <%= componentes.activo ? 'selected' : '' %>>Activo</option>
      <option value="0" <%= !componentes.activo ? 'selected' : '' %>>Inactivo</option>
    </select>
    
    <button class="btn btn-warning">Actualizar</button>
  </form>
</body>
</html>